<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Взрывающийся шарик</title>
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      background: transparent;
      overflow: hidden;
    }

    #balloon {
      width: 150px;
      cursor: pointer;
      transition: transform 0.2s;
    }

    #balloon:hover {
      transform: scale(1.1);
    }

    .particle {
      position: absolute;
      pointer-events: none;
    }
  </style>
</head>
<body>
  <!-- Звук лопания шарика из локальной папки -->
  <audio id="pop-sound" preload="auto">
    <source src="sounds/pop.mp3" type="audio/mpeg">
  </audio>

  <img id="balloon" src="" alt="Balloon">

  <script>
    // Получаем звуковой элемент с проверкой
    const popSound = document.getElementById('pop-sound');

    // Улучшенная функция для воспроизведения звука
    function playSound(soundElement) {
      if (!soundElement) {
        console.log("Ошибка: звуковой элемент не найден");
        return;
      }
      
      try {
        if (soundElement.currentTime) {
          soundElement.currentTime = 0;
        }
        
        const playPromise = soundElement.play();
        
        if (playPromise !== undefined) {
          playPromise.catch(error => {
            console.log("Звук заблокирован браузером:", error);
          });
        }
      } catch (error) {
        console.log("Ошибка воспроизведения звука:", error);
      }
    }

    // Получаем параметры из URL
    const urlParams = new URLSearchParams(window.location.search);
    const imageUrl = urlParams.get('image') || 'https://i.imgur.com/5Q1V9gJ.png';
    
    // Устанавливаем изображение
    const balloon = document.getElementById('balloon');
    balloon.src = imageUrl;

    balloon.addEventListener('click', function() {
      // Воспроизводим звук лопания
      playSound(popSound);
      
      const rect = this.getBoundingClientRect();
      const x = rect.left + rect.width / 2;
      const y = rect.top + rect.height / 2;
      
      // Скрываем оригинальный шарик
      this.style.display = 'none';
      
      // Создаем эффект разрыва
      createExplosion(x, y, this.src);
    });

    function createExplosion(x, y, imgUrl) {
      const particleCount = 20;
      
      for (let i = 0; i < particleCount; i++) {
        const particle = document.createElement('div');
        particle.className = 'particle';
        particle.style.background = `url(${imgUrl})`;
        particle.style.backgroundSize = 'cover';
        particle.style.width = '20px';
        particle.style.height = '20px';
        particle.style.left = x + 'px';
        particle.style.top = y + 'px';
        particle.style.borderRadius = '50%';
        
        document.body.appendChild(particle);
        
        // Анимация полета частицы
        const angle = Math.random() * Math.PI * 2;
        const speed = 2 + Math.random() * 3;
        const vx = Math.cos(angle) * speed;
        const vy = Math.sin(angle) * speed;
        
        let posX = x;
        let posY = y;
        let opacity = 1;
        
        const animate = () => {
          posX += vx;
          posY += vy;
          opacity -= 0.02;
          
          particle.style.left = posX + 'px';
          particle.style.top = posY + 'px';
          particle.style.opacity = opacity;
          
          if (opacity > 0) {
            requestAnimationFrame(animate);
          } else {
            particle.remove();
          }
        };
        
        animate();
      }
    }
  </script>
</body>
</html>
